<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="brand_promotion_message_remove" inherit_id="web.brand_promotion_message" name="Website customizer" priority="20">
        <xpath expr="//t[@t-set='final_message']" position="replace">
            <t t-set="final_message">
                <t t-if="request.env['ir.config_parameter'].sudo().get_param('hide_powered_by_Pro.show_powered_by')">
                     <t t-out="request.env['ir.config_parameter'].sudo().get_param('hide_powered_by_Pro.powered_by_html')"/>
                </t>
            </t>
        </xpath>
        <xpath expr="//t[@t-out]" position="replace">
             <t t-out="final_message"/>
        </xpath>
    </template>

