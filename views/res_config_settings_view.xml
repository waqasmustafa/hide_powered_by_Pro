<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hide_powered_by_config_settings_view" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.poweredby</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='user_default_rights']" position="before">
                <block title="Powered by Odoo Settings" id="powered_by_odoo_setting_block">
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 mb-3">
                            <label for="show_powered_by" class="me-2">
                                Click to Show and Add your Custom Branding
                            </label>
                            <field name="show_powered_by"/>
                        </div>
                        <div class="col-12 col-lg-6 mb-2" invisible="not show_powered_by">
                            <label for="powered_by_html" class="me-2">
                                Custom Branding Text (HTML)
                            </label>
                            <field name="powered_by_html" widget="html" placeholder="Powered By MyCompany" options="{'style-inline': True}"/>
                        </div>
                    </div>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
